{
  "builders": [{
    "type": "docker",
    "image": "sendmail-base:0.1",
    "commit": true,
    "pull": false,
    "changes": [
      "LABEL version=0.2"
    ]    
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/site.config.m4",
