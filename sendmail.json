    {
      "type": "shell",
      "scripts": [
        "scripts/build_sendmail.sh"
      ]
    }
  ],
  "post-processors": [{
    "type": "docker-tag",
    "repository": "sendmail-base",
    "tag": "0.2"
  }]
}
